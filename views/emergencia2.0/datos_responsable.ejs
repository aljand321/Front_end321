<!DOCTYPE >
<html >
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link rel="icon" type="image/png" sizes="16x16" href="/images/hospital.png">
  <title>Emergencia</title>
  <%- include("./partials/head") -%>
  <link rel="stylesheet" href="/sweetalert2/dist/sweetalert2.min.css">
  <style>
    .info2{ border-radius:100%; float: left; height:80px; width:80px; }
    .info2 .icon{ font-size:50px; color:#FFFFFF; float:left; margin-right:50px; margin:15px 20px 10px 18px;}
    .vertical-alignment-helper {
      display:table;
      height: 100%;
      margin-left: 41%;
    }
    .vertical-align-center {
      /* To center vertically */
      display: table-cell;
      vertical-align: middle;
      text-align: center;
    }
  </style>
</head>
<body class="light_theme  fixed_header left_nav_fixed">
  <div class="wrapper">
    <div class="header_bar">
      <div class="brand">
        <div class="logo" style="display:block"><span class="theme_color">Hospital</div>    
      </div>
      <div class="header_top_bar">
        <a href="javascript:void(0);" class="menutoggle"> <i class="fa fa-bars"></i> </a>
        <div class="top_right_bar">
          <div class="user_admin dropdown"> <a href="javascript:void(0);" data-toggle="dropdown">
            <img src="/images/medico.png" /><span class="user_adminname">  <span>&nbsp;&nbsp;</span> <%=data_doc.data.medico.nombre%> <%=data_doc.data.medico.apellidop%></span> <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <div class="top_pointer"></div>
              <li> <a href="javascript:void(0);"data-target="#myModalCerrar" data-toggle="modal"><i class="fa fa-power-off"></i> Salir</a> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>   
    <div class="inner">
      <div class="left_nav">
        <div class="left_nav_slidebar">
          <ul>
            <li ><a href="/emergencia2.0/home/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>"><i class="fa fa-home"></i> Inicio <span class="plus"><i class="fa fa-plus"></i></span> </a></li>
            <li class="left_nav_active theme_border"> <a href="javascript:void(0);"> <i class="fa fa-users icon"></i>Consultas de Emerg.<span class="left_nav_pointer"></span>  <span class="plus"><i class="fa fa-plus"></i></span></a>
              <ul class="opened" style="display:block">
                <li> <a href="/emergencia2.0/lista_pacientes/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b class="theme_color">Lista de Consultas</b> </a> </li>
              </ul>
            </li>
            <li class=""> <a href="javascript:void(0);"> <i class="fa fa-folder-open-o"></i> Reportes<span class="plus"><i class="fa fa-plus"></i></span></a>
              <ul >
                <li> <a href="/emergencia2.0/ReporMotivoVisita"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b class="">Pacientes</b> </a> </li>
                <li> <a href="/emergencia2.0/lista_consultas/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Reportes de Cons.</b> </a> </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div class="contentpanel">
        <div class="container clear_both padding_fix"><br>
          <div class="col-lg-12 block-web">
            <div class="head" id="">
              <div class="actions">
                <div class="btn-group ">
                  <button data-toggle="dropdown" class="btn btn-info dropdown-toggle" type="button"><i class="fa fa-clipboard"></i> Historial del Paciente <span class="caret"></span></button>
                  <ul role="menu" class="dropdown-menu">
                    <li><a href="/emergencia2.0/alergias/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>">Datos de interes</a></li>
                    <!-- <li><a href="/datos_genPaciente_emergencia/lista_antecedentes/<%=dataPaciente[0].id%>">Informe</a></li> -->
                    <li><a href="/emergencia2.0/examen_fisico/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>">Examen Físico General</a></li>		  
                  </ul>
                </div> 
              </div>
              <div class="header">
                <h2 class="content-header"><div class="info2 blue_symbols"><i class="fa fa-male icon"></i></div>Consultas de Emergencias /<span class="semi-bold"> Datos del Responsables</span></h2>
              </div>
            </div>
          </div>
          <div class="">
            <div class="">
              <div class="">
                <section class="panel default blue_title h2">
                  <div class="">
                    <ul class="nav nav-tabs" id="myTab">
                      <li class=" col-lg-6 active active  text-center"><a data-toggle="tab" href="#Tab1"> <i class="fa fa-user "></i><span>&nbsp;&nbsp;&nbsp;</span>Registro de Responsable</a></li>
                      <li class="col-lg-6 text-center" ><a  data-toggle="tab" href="#Tab2" > <i class="fa fa-group "></i><span>&nbsp;&nbsp;&nbsp;</span>Lista de Responsables</a></li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                      <div id="Tab1" class="tab-pane fade in active">
                        <div class="row" >
                          <div class="block-web ">  
                            <div class="porlets-content">
                              <% if(update_responsable == null) { %>
                              <%if(!data) { %> 
                              <form class="form-horizontal group-border-dashed" action="/emergencia2.0/reg_responsable/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>" method="POST" parsley-validate novalidate>
                                <input type="hidden" name="id_register" value="<%=data_doc.data.medico.id%>">
                                <h3 class="text-center">Registro de los Datos del Responsable</h3>
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Nombre(s)</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="nombre" value=""size="10"  required onkeyup="mayus(this);" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label"> Apellido Paterno</label><br><br>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="apellido1" value=""  required size="20" onkeyup="mayus(this);" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label"> Apellido Materno</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="apellido2" value="" required size="10" onkeyup="mayus(this);"/>
                                  </div>
                                </div>      
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Dirección</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="direccion" value="" required size="10" onkeyup="mayus(this);"/>
                                  </div>	
                                  <div class="col-sm-4">
                                    <label class="control-label">C.I.</label><br><br>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="ci" value="" required size="20" maxlength="10" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Telefono</label><br><br>
                                    <input  parsley-type="number" type="text" class="form-control" name="telefono" required placeholder="XX-XXXXXX" maxlength="8" />
                                  </div>
                                </div><br><br>
                                <div class="header">
                                  <div class="col-md-12 page-content ">                 
                                    <div class="col-md-8 ">
                                      <button type='submit' class='btn btn-success'><i class='fa fa-save'></i> &nbsp;&nbsp; Guardar</button>
                                      <a href="/emergencia2.0/registrar_emergencia/<%=id_cita%>/<%=dataPaciente[0].numeroHistorial%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>" class="btn btn-danger" ><i class="fa fa-times"></i> <span> Cancelar</span> </a>
                                    </div>
                                  </div>
                                </div>    
                              </form>
                              <%} else {%>
                              <form class="form-horizontal group-border-dashed" action="/emergencia2.0/reg_responsable/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>" method="POST" parsley-validate novalidate>
                                <input type="hidden" name="id_register" value="<%=data_doc.data.medico.id%>">
                                <h3 class="text-center">Datos del Responsable</h3>
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Nombre(s):</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="nombre" value="<%=data.data.nombre%>"size="10" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Primer Apellido:</label>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="apellido1" value="<%=data.data.apellido1%>" size="20" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Segundo Apellido:</label>
                                    <input type="text" class="form-control" parsley-trigger="change" name="apellido2" value="<%=data.data.apellido2%>"size="10" />
                                  </div>
                                </div>      
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Dirección:</label>
                                    <input type="text" class="form-control" parsley-trigger="change" name="direccion" value="<%=data.data.direccion%>"size="10"/>
                                  </div>	
                                  <div class="col-sm-4">
                                    <label class="control-label">C.I.:</label>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="ci" value="<%=data.data.ci%>" size="20" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Telefono:</label>
                                    <input  type="text" class="form-control"  name="telefono" value="<%=data.data.telefono%>"size="10" />
                                  </div>
                                </div>
                                <div class="form-group">
                                  <div class="col-sm-offset-4 col-sm-10">
                                    <button type="submit" class="btn btn-success btn-icon">Guardar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
                                    <button type="reset"class="btn btn-danger btn-icon" data-dismiss="modal"><i class="fa fa-times"></i> Cancelar <span>&nbsp;</span></button>
                                  </div>
                                </div>
                              </form>
                              <% } %>
                              <% } else { %>
                              <form class="form-horizontal group-border-dashed" action="/emergencia2.0/update_responsable/<%=update_responsable.data[0].id%>/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>" method="POST" parsley-validate novalidate>
                                <h3 class="text-center">Actualizar Datos del Responsable</h3>
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Nombre(s)</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="nombre" value="<%=update_responsable.data[0].nombre%>"size="10" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Apellido Paterno</label><br><br>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="apellido1" value="<%=update_responsable.data[0].apellido1%>" size="20" />
                                  </div>
                                  <div class="col-sm-4">
                                    <label class="control-label">Apellido Materno</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="apellido2" value="<%=update_responsable.data[0].apellido2%>"size="10" />
                                  </div>
                                </div>      
                                <div class="form-group">
                                  <div class="col-sm-4">
                                    <label class="control-label">Direccion</label><br><br>
                                    <input type="text" class="form-control" parsley-trigger="change" name="direccion" value="<%=update_responsable.data[0].direccion%>"size="10"/>
                                  </div>	
                                  <div class="col-sm-3">
                                    <label class="control-label">C.I.</label><br><br>
                                    <input type="text"  class="form-control" parsley-trigger="change" name="ci" value="<%=update_responsable.data[0].ci%>" size="20" />
                                  </div>
                                  <div class="col-sm-3">
                                    <label class="control-label">Telefono</label><br><br>
                                    <input  type="text" class="form-control"  name="telefono" value="<%=update_responsable.data[0].telefono%>"size="10" />
                                  </div>
                                </div><br>
                                <div class="header"></div>
                                <div class="col-md-12 page-content ">                                          
                                  <div class="col-md-8 ">
                                    <button type="submit" class="btn btn-success btn-icon">Actualizar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
                                    <a class="btn btn-danger active btn-icon" aria-pressed="true" role="button"  href="/emergencia2.0/remove_data_update/<%=dataPaciente[0].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>"><i class="fa fa-times"></i> Cancelar<span>&nbsp;</span></a><span>&nbsp;&nbsp;&nbsp;</span>
                                  </div>
                                </div>
                              </form>
                              <% } %>
                            </div>
                          </div> 
                        </div>
                      </div>
                      <div id="Tab2" class="tab-pane fade">
                        <div class="row">
                          <div class="block-web">
                            <div class="porlets-content">
                              <div class="table-responsive">
                                <table  class="display table table-bordered table-striped" id="dynamic-table">
                                  <thead>
                                    <tr>
                                    <th>Nombre</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>Dirección</th>
                                    <th>CI</th>
                                    <th>Teléfono</th>
                                    <th>Opciones</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% for( var i = 0; i< list_responsables.length; i++) { %>
                                    <tr>
                                    <td><%=list_responsables[i].nombre%></td>
                                    <td><%=list_responsables[i].apellido1%></td>
                                    <td><%=list_responsables[i].apellido2%></td>
                                    <td><%=list_responsables[i].direccion%></td>
                                    <td><%=list_responsables[i].ci%></td>
                                    <td><%=list_responsables[i].telefono%></td>
                                    <td class="center">            
                                      <a href="/emergencia2.0/one_responsable/<%=dataPaciente[0].id%>/<%=list_responsables[i].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_p%>/<%=id_cita%>"  class="btn  tooltips"  data-original-title="Ver Datos Personales"><i class="fa fa-eye" style="color:rgb(8, 141, 218)"></i></a>
                                    </td>
                                    </tr>
                                    <% } %>
                                  </tbody> 
                                </table>
                              </div>
                            </div>
                          </div> 
                        </div>
                      </div>
                    </div>
                  </div>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="myModalCerrar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"> 
    <div class="vertical-alignment-helper">
      <div class="modal-dialog vertical-align-center modal-sm ">
        <div class="modal-content"><br>
          <div class="center">
            <i><img src="/images/salir.gif" width="100" height="100" /></i>
          </div>
          <div class="center">
            <h5><b>¿Cerrar Sesión?</b></h5>
          </div>
          <div class="modal-footer">
            <div class="center">
              <a href="/delete_token/<%=data_doc.data.token_id%>" class="btn btn-success"><i class="fa fa-check"></i><span>&nbsp;</span>Sí, Confirmar</a>
              <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i><span>&nbsp;</span>No, Cancelar</button>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <!--====== Scripts -->
  <%- include("../partials/scripts") -%>
  <script>
    function mayus(e) {
      e.value = e.value.toUpperCase();
    }
  </script>
  <script>
    /*  <%if(msg) { %> */
      /*  <%if(msg.data.success == false) { %> */
    msg_false()
    function msg_false(){
      swal.fire(
      'Error!',
      '<label style="color:red;">'+`<%=msg.data.data_responsable%>`+'</label>',
      'error'
      )
    }
    /* <% } else {%> */
    msg_true()
    function msg_true(){
      swal.fire(
      'Success!',
      '<label style="color:green;">'+ `<%=msg.data.data_responsable%>` +'</label>',
      'success'
      )
    }
    /*  <% } %> */
    /*  <% } %> */
  </script>
</body>
</html>
