<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
	<link rel="stylesheet" href="/css/form1.css">
</head>
<body class="dashboard-sideBar-imagg cover">
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage dashboard-sideBar-cttt">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
			<div class="page-header">
				<h1 class="text-titles"><i class="zmdi zmdi zmdi-accounts zmdi-hc-fw"></i> Usuarios </h1>
			</div>
		</div>
		<div class="container-fluid">
				<form action="/usuarios/usuarios" method="POST" onsubmit="return validar()">
					<%if (msg) {%>
						<h1><%=msg%></h1>
					<% } %>
					<div class="grupo" id="cabeza">
						<div id="tres2">
							<div class="entrada">Apellido Paterno<br>
								<input class="ma" type="text" name="apellidop" id="apellidop"><br>
							</div>
							<div class="entrada">Apellido Materno:<br>
								<input class="ma" type="text" name="apellidom" id="apellidom"><br>
							</div>
							<div class="entrada">Nombre(s):<br>
								<input class="ma"  type="text" name="nombre" id="nombre" ><br>
							</div>
						</div>
						<div id="correo">
							<div class="entrada">C.I.:<br>
								<input class="ma" type="text" name="ci" id="ci"><br>
							</div>
							<div class="entrada">Cargo:<br>
								<input class="ma" type="text" name="cargo" id="cargo"><br>
							</div>
							<div class="entrada">Direccion:<br>
								<input class="ma" type="text" name="direcion" id="direccion" ><br>
							</div>
							<div class="entrada">Telefono<br>
								<input class="ma" type="text" name="telefono" id="telefono" ><br>
							</div>
						</div>							
					</div>
					<p class="text-center">
						<button type="reset" class="btn btn-info btn-raised" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
						<button type="submit" class="btn btn-danger btn-raised"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
					</p>
				</form>
				<div class="container-fluid">
				<div class="table-responsive">
					<div id="correo">
						<div class="entrada">
							<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success btn-raised btn-lg"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
						</div>
						<div class="entrada">Buscar <i class="zmdi zmdi-search"></i><br>
							<input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Buscar..."><br>
						</div>
					</div>
					<table class="fl-table" id="myTable">
						<thead>
							<tr>
							<th>Nombre</th>
							<th>Apellido Paterno</th>
							<th>Apellido Materno</th>
							<th>C.I.</th>
							<th>Cargo</th>
							<th>Modificar</th>
							<th>Dar de Baja</th>
							<th>Registrar Cuenta</th>
							</tr>
						</thead>
						<tbody>
						<% if (resp == null) { %>
							<h1>no hay cuenta</h1>
						<% } else { %>
						<% for(var i=0; i< resp.length; i++) { %>
							<tr>
							<td><%=resp[i].nombre %></td>
							<td><%=resp[i].apellidop %></td>
							<td><%=resp[i].apellidom %></td>
							<td><%=resp[i].ci %></td>
							<td><%=resp[i].cargo %></td>										
							<td><a href="/usuarios/usuarios/<%=resp[i].id %>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
							<td><a href="#!" class="btn btn-danger btn-raised btn-xs"><i class="zmdi zmdi-delete"></i></a></td>
							<td><a href="/usuarios/UsuraioCuenta/<%=resp[i].id %>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
							</tr>
						<% } %>
						<% } %>
						<tbody>
					</table>
				</div>
			</div>
			</div>
		</div>
		</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
	<script src="/js/validaciones.js"></script>	
	
</body>
</html>