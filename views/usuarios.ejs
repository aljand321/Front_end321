<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
				<li>
					<a href="#!" class="btn-search"><i class="zmdi zmdi-search"></i></a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
			<div class="page-header">
				<h1 class="text-titles"><i class="zmdi zmdi zmdi-accounts zmdi-hc-fw"></i> Usuarios </h1>
			</div>
		</div>
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
					<ul class="nav nav-tabs" style="margin-bottom: 15px;">
						<li class="active"><a href="#list" data-toggle="tab">Nuevo Usuario</a></li>
						<li ><a href="#new" data-toggle="tab">Lista de Usuarios</a></li>

					</ul>
					<!-- nuevos Usuarios -->
					<div id="myTabContent" class="tab-content">
						<!--Nuevo Usuarios-->
						<div class="tab-pane fade active in" id="list">
								<div class="container-fluid">
									<div class="row">
										<div class="col-xs-12 col-md-10 col-md-offset-1">
											<form action="/usuarios/usuarios" method="POST" onsubmit="return validar()">
												<%if (msg) {%>
													<h1><%=msg%></h1>
												<% } %>
		
																
												<div class="form-group label-floating ma">
													<label class="control-label">Nombre</label>
													<input class="form-control " class="MAYUSCULAS"  type="text" name="nombre" id="nombre" >
												</div>
												<div class="form-group label-floating ma">
													<label class="control-label">Apellido Paterno</label>
													<input class="form-control"  type="text" name="apellidop" id="apellidop" >
												</div>
												<div class="form-group label-floating ma">
													<label class="control-label">Apellidos Meterno</label>
													<input class="form-control" type="text" name="apellidom" id="apellidom" >
												</div>
												<div class="form-group label-floating  ">
													<label class="control-label">CI.</label>
													<input class="form-control" type="text" name="ci" id="ci" >
												</div>
												<div class="form-group label-floating ma ">
													<label class="control-label">Cargo</label>
													<input class="form-control" type="text" name="cargo" id="cargo" >
												</div>
												<div class="form-group label-floating ma">
													<label class="control-label">Direccion</label>
													<input class="form-control" type="text" name="direcion" id="direccion" >
												</div>
												<div class="form-group label-floating">
													<label class="control-label">Telefono</label>
													<input class="form-control" type="text" name="telefono" id="telefono" >
												</div>
												<p class="text-center">
													<button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
													<button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
												</p>
											</form>
										</div>
									</div>
								</div>
							</div>
						<div class="tab-pane fade " id="new">
							<p class="text-center">
								<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
							</p>
							<div class="table-responsive">
								<div class="table-wrapper">
									<div class="form-group pull-left">
										<input type="text" class="search form-control" placeholder="Buscar">
									</div>
									<span class="counter pull-left"></span>
									<table class="fl-table">
										<thead>
											<tr>
											<th>Nombre</th>
											<th>Apellido Paterno</th>
											<th>Apellido Materno</th>
											<th>C.I.</th>
											<th>Cargo</th>
											<th>Modificar</th>
											<th>Dar de Baja</th>
											<th>Registtrar Cuenta</th>
											</tr>
										</thead>
										<tbody>
											<% if (resp == null) { %>
												<h1>no hay cuenta</h1>
											<% } else { %>
												
												<% for(var i=0; i< resp.length; i++) { %>
													<tr>
													<td><%=resp[i].nombre %></td>
													<td><%=resp[i].apellidop %></td>
													<td><%=resp[i].apellidom %></td>
													<td><%=resp[i].ci %></td>
													<td><%=resp[i].cargo %></td>										
													<td><a href="/usuarios/usuarios/<%=resp[i].id %>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
													<td><a href="#!" class="btn btn-danger btn-raised btn-xs"><i class="zmdi zmdi-delete"></i></a></td>
													<td><a href="/usuarios/UsuraioCuenta/<%=resp[i].id %>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
													</tr>
													<% } %>
											<% } %>
										<tbody>
									</table>
								</div>
							</div>
						</div>
						
					</div>
					
				</div>
			</div>
		</div>
		</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
	<script src="/js/validaciones.js"></script>	
	
</body>
</html>