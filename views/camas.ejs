                                    </div>
                                </div>
                            </form>
                            <% } else { %>
                            <form class="form-horizontal group-border-dashed" action="/salas/updateCama/<%=resp[0].id%>" method="POST" parsley-validate novalidate>
                                <div class="form-group col-sm-12">
                                    <div class="col-sm-6">
                                        <label class="control-label">Descripcion</label>
                                        <select class="form-control" id="source"  name="descripcion">
                                            <option><%=resp[0].descripcion%></option>
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="control-label">NÃºmero de Cama</label>
                                        <input class="form-control" type="text" name="numeroCama" value="<%=resp[0].numeroCama%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-10">
                                        <button type="submit" class="btn btn-success btn-icon" >Actualizar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
