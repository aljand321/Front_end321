<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
				<li>
					<a href="#!" class="btn-search">
						<i class="zmdi zmdi-search"></i>
					</a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
            <div class="page-header">
                <h1 class="text-titles"><i class="zmdi zmdi-home zmdi-hc-fw"></i>Camas</h1>
            </div>
        </div>
        <!-- Nueva Sala-->
		<div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-10 col-md-offset-1">
                <form action="" method="">
                    <div class="form-group label-floating">
                        <label class="control-label">Especilidad</label>
                        <select class="form-control">
                            <option>Pediatria</option>
                            <option>Medicina General</option>
                            <option>Cirugia General</option>
                            <option>Ginecologia y Obstetricia</option>
                        </select>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Descricion</label>
                        <select class="form-control">
                            <option>Sala H.- Niños</option>
                            <option>Sala H.- Hombres</option>
                            <option>Sala H.- Mujeres</option>
                            <option>Sala H.- 3ra. Edad</option>
                            <option>Sala H.- Cirugia General</option>
                        </select>
                    </div>
                    <p class="text-center">
                        <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                        <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                    </p>
                </form>
                <!-- Lista de Salas-->
                <div class="table-responsive">
					<div class="table-responsive">
                        <div class="table-wrapper">
							<p class="text-center">
								<button type="submit" class="btn btn-success btn-lg" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Nueva Cama </button>
								<button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir </button>
							</p>
                            <table class="fl-table">
                                <thead>
                                    <tr>
                                        <th>Cama</th>
                                        <th>Descripcion</th>
                                        <th>Ver Estado</th>
                                        <th>Modificar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Cama 1</td>
                                        <td>Sala H.- Niños</td>
                                        <td><a href="/historial" class="btn btn-info btn-raised btn-xs "><i class="zmdi zmdi-home"></i></a></td>
                                        <td><a href="#!" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi zmdi-refresh-alt"></i></a></td>
                                    </tr>
                                <tbody>
                            </table>
                        </div>
                        </div>
                </div>
            </div>
            </div>
        </div>
	</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
</body>
</html>