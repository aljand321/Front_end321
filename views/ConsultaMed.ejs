<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menudoc") -%>
	<!-- Content page-->
<section class="full-box dashboard-contentPage">
	<!-- NavBar -->
	<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
			
			</ul>
		</nav>
		<!-- Content page -->
		
		<div class="container-fluid">
            <h1>esto es la prueva</h1>
			<div class="page-header">				
				<h1 class="text-titles"><i class="zmdi zmdi-account-calendar zmdi-hc-fw"></i> Consulta <small>Médica</small></h1>				
			</div>
		</div>
		<div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <ul class="nav nav-tabs" style="margin-bottom: 15px;">
                              <li class="active"><a href="#new" data-toggle="tab">Registro de consulta medica</a></li>
                              <li><a href="#list" data-toggle="tab">Listado de consultas del paciente</a></li>
                        </ul>
                        <!-- Registro de nuevos proveedores-->
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade active in" id="new">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-10 col-md-offset-1">
                                            
                                            <form action="#" method="POST">
                                                <h1>Datos Personales</h1>
                                                <div class="form-group label-floating">
                                                  <label class="control-label">N° de Historia</label>
                                                  <input class="form-control" type="text" name="numeroHistorial" value="">
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label"> Apellido Paterno </label>
                                                    <input class="form-control" type="email" name="apellidop" value="">
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Apellido Materno</label>
                                                    <input class="form-control" type="text"  name="apellidom" value="">
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Nombre</label>
                                                    <input class="form-control" type="text" name="nombre">
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">CI</label>
                                                    <input class="form-control" type="text" name="ci" value="">
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Sexo</label>
                                                    <input class="form-control" type="text" name="sexo" value="">
                                                </div>
                                                <div class="form-group label-floating">
                                                  <label class="control-label">Fecha de Nacimiento</label>
                                                  <input class="form-control" type="text" name="fechanacimiento" value="">
                                                </div>
                                                <h3>Estodo del paciente</h3>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Anamnesis</label>
                                                    <textarea class="form-control" name="anamnesis"></textarea>
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Diagnostico</label>
                                                    <textarea class="form-control" name="diagnostico"></textarea>
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Tratamiento</label>
                                                    <textarea class="form-control" name="tratamiento"></textarea>
                                                </div>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Observaciones</label>
                                                    <textarea class="form-control" name="observaciones"></textarea>
                                                </div>
                                                <p class="text-center">
                                                    <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                                    <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                                                </p>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Listas de Proveedores-->
                            <div class="tab-pane fade" id="list">
                                <div class="table-responsive">
                                    <p class="text-center">
                                        <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir </button>
                                    </p>
                                    <div class="table-responsive">
                                        <div class="table-wrapper">
                                            <table class="fl-table">
                                                <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Numero Historial</th>
                                                    <th>Nombre</th>
                                                    <th>Apellido Paterno</th>
                                                    <th>Apellido Materno</th>
                                                    <th>Diagnostico</th>
                                                    <th>Dar Receta</th>
                                                    <th>Papeleta Internacion</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
												    <td><a href="/medico/recetas/" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
												    <td><a href="/medico/Pinternacion/" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
                                                    
                                                </tbody>                                               
                                                
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
</body>
</html>