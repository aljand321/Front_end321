    <div class="contentpanel">
      <div class="container clear_both padding_fix">
        <br>
        <div class="row">
        <div class="col-md-12">
          <div class="block-web">
            <div class="header">
              <div class="info2 blue_symbols"><i class="fa fa-hospital-o icon"></i></div>
              <h3 class="content-header ">Creacion Salas</h3>
            </div>
            <br>
            <br>
            
            <div class="porlets-content">
                <%if (OnlySala != null) { %>
                    <%if (dataSala == null) { %>   
                    <h1>No Se puede establecer una coneccion con Especialidades porfavor vuelva a cargar esta pagina desde una pestaña o vista anterior</h1>
                    <% } else { %>   
                    <h1>Formulario para Actualizar Sala</h1> 
                    <%=OnlySala[0].id%>
					<form class="form-horizontal group-border-dashed" action="/salas/updateSalas/<%=OnlySala[0].id%>"  method="POST" parsley-validate novalidate>
					<div class="form-group col-sm-12">
						
						<div class="col-sm-3">
							<label class="control-labe">Especialidad:</label>
                            <select class="form-control" id="source" name="nombre">
                                <option><%=OnlySala[0].nombre%></option>
                                <% for (var i=0; i < dataSala.length; i++) { %>
                                <option><%=dataSala[i].nombre%></option>
                                <% } %>   
                            </select>
						</div>
						
						<div class="col-sm-3">
							<label class="control-labe">Descricion:</label>
                            <select  class="form-control" id="source" name="descripcionSala">
                                <option><%=OnlySala[0].descripcionSala%></option>
                                <option>Sala H.- Niños</option>
                                <option>Sala H.- Hombres</option>
                                <option>Sala H.- Mujeres</option>
                                <option>Sala H.- 3ra. Edad</option>
                                <option>Sala H.- Cirugia General</option>
                            </select>
						</div>
						<div class="col-sm-3">
              <label class="control-label">Piso:</label>
              <input class="form-control" parsley-trigger="change" type="text" name="piso" value="<%=OnlySala[0].piso%>" />
            </div>
              <label class="control-label">Camas:</label>
            <div class="col-sm-3">
                <input class="form-control" parsley-trigger="change" type="text" required placeholder="Introdusca Apellido" ></input>
            </div>
					</div>
					
					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-10">
                                <a class="btn btn-info active btn-icon" aria-pressed="true" role="button"  href="/salas/salas">Volver<span>&nbsp;</span><i class="fa fa-arrow-left"></i></a><span>&nbsp;&nbsp;&nbsp;</span>
						  <button type="submit" class="btn btn-success btn-icon" >Guardar<span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
						  <button type="reset"class="btn btn-danger btn-icon" data-dismiss="modal">Cancelar <span>&nbsp;</span><i class="fa fa-times"></i></button>
                        </div>
                        
					  </div><!--/form-group--> 
                  
                </form>
                <% } %>
                <% } else if (dataSala == null) { %>
                    <h1>No Se puede establecer una coneccion con Especialidades porfavor vuelva a cargar esta pagina desde una pestaña o vista anterior</h1>
                <% } else { %>
                    <form class="form-horizontal group-border-dashed" action="/salas/salas" method="POST" parsley-validate novalidate>
                        <div class="form-group ">
                            
                            <div class="col-sm-3">
                                    <label class="control-labe">Especialidad:</label>
                                    <select class="form-control" id="source" name="nombre">
                                        <% for (var i=0; i < dataSala.length; i++) { %>
                                            <option><%=dataSala[i].nombre%></option>
                                            <% } %>  
                                    </select>
                                      
                                </div>
                                
                                <div class="col-sm-3">
                                    <label class="control-labe">Descricion:</label>
                                    <select  class="form-control" id="source"  name="descripcionSala">
                                        <option>Sala H.- Niños</option>
                                        <option>Sala H.- Hombres</option>
                                        <option>Sala H.- Mujeres</option>
                                        <option>Sala H.- 3ra. Edad</option>
                                        <option>Sala H.- Cirugia General</option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label class="control-labe">Piso:</label>
                                    <input class="form-control" parsley-trigger="change"  type="text" name="piso"  />
                                </div>
                                <div class="col-sm-3">
                                    <label class="control-labe">Camas:</label>
                                    <input class="form-control" parsley-trigger="change"  type="text"  />
                                </div>
                            
                        </div><!--/form-group--> 
                           
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-10">
                                
                                <button type="submit" class="btn btn-success btn-icon">Guardar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
                                <button type="reset"class="btn btn-danger btn-icon">Cancelar <span>&nbsp;</span><i class="fa fa-times"></i></button>
                                        
                            </div>
                          </div><!--/form-group--> 
                      
                    </form>
                    <% } %>
                    
              </div>
          </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-12">
          <div class="block-web">
           <div class="header">
             <!-- Lista de Salas-->
              <h3 class="content-header">Lista Especialidades</h3>
            </div>
         <div class="porlets-content">
            <div class="table-responsive">
                <table  class="display table table-bordered table-striped" id="dynamic-table">
                    <thead>
                         <tr>
                            <th>#</th>
                            <th>Especilidad</th>
                            <th>Descripcion</th>
                            <th>Piso</th>
                            <th>Camas</th>
                            <th>Opciones</th>
                            

                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i=0; i< resp.length; i++) { %>
                        <tr>
                          <td><%=i+1%></td>
                          <td><%=resp[i].nombre%></td>
                          <td><%=resp[i].descripcionSala%></td>
                          <td><%=resp[i].piso%></td>
                          <td></td>
                        <td>
                            <a href="/salas/renderCamas/<%=resp[i].id%> " data-toggle="tooltip" class="btn  tooltips" data-original-title="Dar Camas"><i class="fa fa-plus "></i></a><span>&nbsp;</span>
                            <a href="/salas/updateSalas/<%=resp[i].id%>""  data-toggle="tooltip" class="btn  tooltips" data-original-title="editar"><i class="fa fa-pencil " style="color: darkgreen"></i></a><span>&nbsp;</span>
                                
                        </td>							
                        </tr>
                        <% } %>
                      </tbody>
                </table>
              </div>
            </div>
