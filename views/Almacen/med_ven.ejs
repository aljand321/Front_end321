<script>
  const medicamentos = new Vue({
  	el: '#medicamentos', 
  	data : () => ({
      url:data_url.url_front_end,
      fecha_inicio:'',
		  fecha_final:'',
      id_medicamento:'',
      
      list:''
    }),
    methods:{ 
      traer_data(e){
        e.preventDefault();
        var datos = {
          fecha_inicio: this.fecha_inicio,
		      fecha_final: this.fecha_final,
		      id_medicamento: this.id_medicamento,
        };   
      
        var esto = {
          method: 'post',
          body: JSON.stringify(datos),
          headers:{
            'Content-type' : "application/json"
          }
        };
        fetch(this.url+'/almacen/vue_filter_med_g',esto)
        .then(res => res.json())
        .catch(error => console.error('Error:', error))
        .then(data => {
          if(data.success == false){
            swal.fire(
              'Error!',
              '<label style="color:red;">'+data.msg+'</label>',
              'error'
            )
          }else{
            this.list = data;            
          }
        })
      }
    }
  })
</script>
