    <div class="contentpanel"><br>
		<!--\\\\\\\ contentpanel start\\\\\\-->
		<!--Formulario-->
		<div class="container clear_both padding_fix">
			<!--\\\\\\\ container  start \\\\\\-->
			<div class="row">
				<div class="col-md-12">
					<div class="block-web">
						<div class="header">
							<div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a><a class="refresh" href="/proveedores/volver"><i class="fa fa-repeat"></i></a></div>
							<h2 class="content-header"><div class="info gray_symbols"><i class="fa  fa-users icon"></i></div>     Registrar Proveedor</h2>
						</div>
						<div class="porlets-content"><br>
							<%if(one_proveedor == null) { %>
							<form action="/proveedores/proveedores" method="POST" parsley-validate novalidate >
								<div class="col-md-12">
								  	<div class="col-md-4">
										<div class="form-group">
											<label>Nombre del Proveedor:</label>
											<input type="text" name="nombre" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>  
									<div class="col-md-4">
										<div class="form-group">
											<label>Email:</label>
											<input type="email" name="email" required class="form-control" >
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label>Direccion:</label>
											<input  type="text"  name="direccion" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
								</div>
								<div class="col-md-12">
									<div class="col-md-6">
										<div class="form-group">
											<label>Telefono:</label>
											<input type="text"  name="telefono" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label>Empresa o Institucion:</label>
											<input type="text" name="empresa" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
								</div>
								<div class="form-group">
										<div class="col-sm-offset-0 col-sm-10">
									<button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i>  Guardar</button>
									<button class="btn btn-danger"><i class="fa fa-times"></i> Cancelar</button>
										</div>
									</div>
							</form>
							<% } else { %>	
							<!--Formulario de Actuaizacion-->
							
							<form action="/proveedores/UpdateProveedor/<%=one_proveedor[0].id%>" method="POST" parsley-validate novalidate>
								<div class="col-md-12">
									<div class="col-md-4">
										<div class="form-group">
											<label>Nombre del Proveedor:</label>
											<input type="text" name="nombre" value="<%=one_proveedor[0].nombre%>" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>  
									<div class="col-md-4">
										<div class="form-group">
											<label>Email:</label>
											<input type="email" name="email" value="<%=one_proveedor[0].email%>" required class="form-control" >
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label>Direccion:</label>
											<input  type="text"  name="direccion" value="<%=one_proveedor[0].direccion%>" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
								</div>
								<div class="col-md-12">
									<div class="col-md-6">
										<div class="form-group">
											<label>Telefono:</label>
											<input type="text" name="telefono" value="<%=one_proveedor[0].telefono%>" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label>Empresa o Institucion:</label>
											<input type="text" name="empresa" value="<%=one_proveedor[0].empresa%>" required class="form-control" onkeyup="mayus(this);">
										</div>
									</div>
								</div>
								<div class="form-group">
										<div class="col-sm-offset-0 col-sm-10">
									<button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i>  Guardar</button>
									<a class="btn btn-danger" href="/proveedores/volver"><i class="fa fa-times"></i> Cancelar</a>
										</div>
								</div>	
							</form>
							<% } %>
						</div>
						<div id="main-content">
							<div class="page-content">
								<div class="row">
									<div class="col-md-12">
									  	<div class="block-web">
											<div class="header">
												<div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> </div>
												<h3 class="content-header">Lista de Proveedores</h3>
											</div>
											<div class="porlets-content">
												<div class="table-responsive">
													<table  class="display table table-bordered table-striped " id="dynamic-table">
														<thead>
															<th>#</th>
															<th>Nombre Proveedor</th>
															<th>Email</th>
															<th>Direccion</th>
															<th>Telefono</th>
															<th>Responsable de atenci√≥n</th>
															<th>Opciones</th>
														</thead>
														<tbody>
													 	<% for (var i = 0; i< resp.length; i++) { %>
															<tr>
															<td><%= i+1%></td>
															<td><%=resp[i].nombre%></td>
															<td><%=resp[i].email%></td>
															<td><%=resp[i].direccion%></td>
															<td><%=resp[i].telefono%></td>
															<td><%=resp[i].empresa%></td>
															<td class="center hidden-phone">
															<a href="/proveedores/OnlyProveedor/<%=resp[i].id%>" data-toggle="tooltip" class="btn  tooltips" data-original-title="Actualizar"><i class="fa fa-refresh "></i></a><span>&nbsp;</span>
														</td>
														</tr>
														<% } %>
														</tbody>
													</table>
												</div><!--/table-responsive-->
											</div><!--/porlets-content-->
										</div><!--/block-web--> 
									</div><!--/col-md-12--> 
								</div><!--/row-->
							</div><!--/page-content end--> 
						</div><!--/main-content end--> 
					</div>
				</div>
			</div><!--/row-->
