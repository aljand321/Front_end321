<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("../partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
				<li>
					<a href="#!" class="btn-search">
						<i class="zmdi zmdi-search"></i>
					</a>
				</li>
			</ul>
        </nav>
        
		<!-- Content page -->
		<div class="container-fluid">
			<div class="page-header">
				<h1 class="text-titles"><i class="zmdi zmdi-account-circle zmdi-hc-fw"></i> Proveedores</h1>
			</div>
		</div>	
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
					<ul class="nav nav-tabs" style="margin-bottom: 15px;">
						  <li class="active"><a href="#new" data-toggle="tab">Registro de Proveedor</a></li>
						  <li><a href="#list" data-toggle="tab">Lista de Proveedores</a></li>
					</ul>
					<!-- Registro de nuevos proveedores-->
					<div id="myTabContent" class="tab-content">
						<div class="tab-pane fade active in" id="new">
							<div class="container-fluid">
								<div class="row">
									<div class="col-xs-12 col-md-10 col-md-offset-1">
										<form action="/proveedores/proveedores" method="POST">
											<div class="form-group label-floating">
											  <label class="control-label">Nombre Proveedor</label>
											  <input class="form-control" type="text" name="nombre">
											</div>
											<div class="form-group label-floating">
												<label class="control-label"> Email </label>
												<input class="form-control" type="email" name="email">
											</div>
											<div class="form-group label-floating">
												<label class="control-label">Direccion</label>
												<input class="form-control" type="text"  name="direccion">
											</div>
											<div class="form-group label-floating">
												<label class="control-label">Telefono</label>
												<input class="form-control" type="text" name="telefono">
											</div>
											<div class="form-group label-floating">
											  <label class="control-label">Responsable de atención</label>
											  <input class="form-control" type="text" name="empresa">
											</div>
											<p class="text-center">
												<button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
												<button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
											</p>
										</form>
									</div>
								</div>
							</div>
						</div>
						<!-- Listas de Proveedores-->
						<div class="tab-pane fade" id="list">
							<div class="table-responsive">
								<p class="text-center">
									<button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir </button>
								</p>
								<div class="table-responsive">
									<div class="table-wrapper">
										<table class="fl-table">
											<thead>
											<tr>
												<th>#</th>
												<th>Nombre Proveedor</th>
												<th>Email</th>
												<th>Direccion</th>
												<th>Telefono</th>
												<th>Responsable de atención</th>
												<th>Modificar</th>
											</tr>
											</thead>
											<tbody>
											<% for (var i = 0; i< resp.length; i++) { %>
											<tr>
												<td><%= i+1%></td>
												<td><%=resp[i].nombre%></td>
												<td><%=resp[i].email%></td>
												<td><%=resp[i].direccion%></td>
												<td><%=resp[i].telefono%></td>
												<td><%=resp[i].empresa%></td>
												<td><a href="/proveedores/OnlyProveedor/<%=resp[i].id%>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
											</tr>
											<% } %>
											<tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		</section>
	<!--====== Scripts -->
	<%- include("../partials/scripts") -%>
</body>
</html>