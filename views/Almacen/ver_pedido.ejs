                                                              <td>{{item.item.nombre}}</td>
                                                              <td>{{item.item.price}}</td>
                                                              <td>{{item.qty}}</td>
                                                              <td>{{item.price}}</td>
                                                
                                                          </tr>
                
                                                                                                   
