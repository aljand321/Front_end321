<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("../partials/head") -%>
	
</head>
<body class="dashboard-sideBar-imagg cover">
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage dashboard-sideBar-cttt">
	<!-- NavBar -->
	<nav class="full-box dashboard-Navbar">
		<ul class="full-box list-unstyled text-right">
			<li class="pull-left">
				<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
			</li>
			<li>
				<a href="#!" class="btn-search"><i class="zmdi zmdi-search"></i></a>
			</li>
		</ul>
	</nav>
	<!-- Content page -->
	<div class="container-fluid">
		<div class="page-header">
	        <h1 class="text-titles"><i class="zmdi zmdi-hospital zmdi-hc-fw"></i>Medicamentos e Insumos</h1>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ul class="nav nav-tabs" style="margin-bottom: 15px;">
				  	<li class="active"><a href="#new" data-toggle="tab">Lista de Medicamentos</a></li>
				  	<li><a href="#list" data-toggle="tab">Nuevo Medicamento</a></li>
                </ul>
				<!-- lista Medicamento -->
				<div id="myTabContent" class="tab-content">
					<div class="tab-pane fade active in" id="new">
						<div class="table-responsive">
							<div class="table-wrapper">
								<div id="correo">
									<div class="entrada">
										<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success btn-raised btn-lg"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
									</div>
									<div class="entrada">Buscar <i class="zmdi zmdi-search"></i><br>
										<input type="text" id="searchInput" placeholder="Buscar.."><br>
									</div>
								</div>
								<table class="fl-table" id="myTable">
									<thead>
										<tr>
											<th>#</th>
											<th>Grupo de Asignación</th>
											<th>Codificación</th>
											<th>Nombre</th>
											<th>Generico</th>
											<th>Concentracion</th>
											<th>Unidad de Medida</th>
											<th>Presentacion</th>
											<th>Fecha de Llegada</th>
											<th>Fecha de Vencimiento</th>
											<th>Cantidad</th>
											<th>Cantidad Unid.</th>
											<th>Precio</th>
											<th>Opciones</th>
										</tr>
									</thead>
									<tbody>
										<% for(var i=0; i< resp.length; i++) { %>
										<tr>
											<td><%= i+1%></td>
											<td><%=resp[i].grupoAsig%></td>
											<td><%=resp[i].codificacion%></td>
											<td><%=resp[i].nombre%></td>
											<td><%=resp[i].generico%></td>
											<td><%=resp[i].concentracion%></td>
											<td><%=resp[i].unidadMedida%></td>
											<td><%=resp[i].presentacion%></td>
											<td><%=resp[i].fechaLLEgada%></td>
											<td><%=resp[i].fechaVencimiento%></td>
											<td><%=resp[i].cantidad%></td>
											<td><%=resp[i].unidades%></td>
											<td><%=resp[i].precio%></td>
											<td><a href="/medicamento/OnlyMedicamento/<%=resp[i].id%>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
										</tr>
										<% } %>
									<tbody>
								</table>
							</div>
						</div>
					</div>
					<!-- Nuevo Medicamento -->
					<div class="tab-pane fade" id="list">
					<% if (dataGRUPOa == null) {%>
						<h1>Ocurrio un problema con el servidor por favor intenta volver a entrar en esta pagina desde una pestaña anterior</h1>
					<% } else {%>	
						<form action="/medicamento/medicamentos" method="POST">
							<div class="grupo" id="cabeza">
								<div id="tres2">
									<div class="entrada">Grupo de Asignación:<br>
										<select  name="grupoAsig">
												<% for(var i=0; i< dataGRUPOa.length; i++) {%>
												<option><%=dataGRUPOa[i].descripcion%></option>
												<% } %>
											</select><br>
									</div>
									<div class="entrada">Codificación:<br>
										<input type="text" name="codificacion"><br>
									</div>
									<div class="entrada">Nombre:<br>
										<input  type="text" name="nombre"><br>
									</div>
								</div>
								<div id="cuatro">
									<div class="entrada">Generico:<br>
										<input type="text" name="generico"><br>
									</div>
									<div class="entrada">Unidad de Medida:<br>
										<input type="text" name="unidadMedida"><br>
									</div>
									<div class="entrada">Concentracion:<br>
										<input type="text" name="concentracion"><br>
									</div>
									<div class="entrada">Presentacion:<br>
										<input type="text" name="presentacion"><br>
									</div>
								</div>
								<div id="correo">
										<div class="entrada">Fecha de Llegada:<br>
											<input type="date" name="fechaLLEgada"><br>
										</div>
										
										<div class="entrada">Cantidad:<br>
											<input type="text" name="cantidad"><br>
										</div>
										
										<div class="entrada">Cantidad por Unidades:<br>
											<input type="text" name="unidades"><br>
										</div>
										<div class="entrada">Fecha de Vencimiento:<br>
											<input type="date" name="fechaVencimiento"><br>
										</div>
										<div class="entrada">Precio:<br>
											<input  type="text" name="precio"><br>
										</div>
									</div>
							</div>
							<p class="text-center">
								<button type="reset" class="btn btn-info btn-raised" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
								<button type="submit" class="btn btn-danger btn-raised"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
							</p>
						</form>
					</div>
				</div>
				<% } %>     
			</div>
		</div>
	</div>
	</section>
	<!--====== Scripts -->
	<%- include("../partials/scripts") -%>
</body>
</html>