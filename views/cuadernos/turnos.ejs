    <div class="contentpanel">
      <div class="container clear_both padding_fix">
        <br>
         <div class="row">
        <div class="col-md-12">
          <div class="block-web">
            <div class="header">
              <div class="info blue_symbols"><i class="fa fa-clipboard icon"></i></div>
              <h3 class="content-header ">Asignación Medico</h3>
            </div>
            <br>
            <br>
            
            <br>
            <div class="porlets-content">
               <%if (modifDoct == null) { %>
                <form class="form-horizontal group-border-dashed" action="/cuaderno/docCuaderno" method="POST" parsley-validate novalidate>
                  <div class="form-group">
                      
                      <div class="col-sm-6">
                          <label class="control-labe">Medico:</label>
                          <select  class="form-control" id="source" name="nombre" >
                              <%for (var i=0; i < resp.length; i++) { %>
                                  <option value="<%=resp[i].nombre%> <%=resp[i].apellidop%> <%=resp[i].apellidom%>/<%=resp[i].id%>"><%=resp[i].nombre%> <%=resp[i].apellidop%> <%=resp[i].apellidom%></option>
                              <% } %>                            
                          </select>
                      </div>
                      <div class="col-sm-6">
                          <label class="control-labe">Especialidad:</label>
                          <select  class="form-control" id="source" name="especialidad" >
                              <%for (var i=0; i < esp.length; i++) { %>
                                  <option><%=esp[i].nombre%></option>
                              <% } %>     
                          </select>
                      </div>
                    </div>
                  <div class="form-group">
                    <div class="col-sm-6">
                      <label class="control-labe">Tipo de Medico:</label>
                      <select class="form-control" id="source" name="TDoctor" >
                        <option>Medico Titular</option>
                        <option>Medico Suplente</option>
                      </select>
                    </div>
                    <div class="col-sm-6">
                      <label class="control-labe">Enfermera:</label>
                      <input type="text" class="form-control" name="enfermera" parsley-trigger="change"   required placeholder="Nombre Enfermera " />
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                      <button type="submit" class="btn btn-success btn-icon">Guardar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
                      <a class="btn btn-primary active btn-icon" aria-pressed="true" role="button"  href="/cuaderno/cuadernos1">Volver<span>&nbsp;</span><i class="fa fa-arrow-left"></i></a><span>&nbsp;&nbsp;&nbsp;</span>
                    </div>
                  </div>
                </form>
            <% } else { %>
                
                <form class="form-horizontal group-border-dashed" action="/cuaderno/updateDoctCuaderno/<%=modifDoct[0].id%>" method="POST" parsley-validate novalidate>
                  <div class="form-group">
                      
                      <div class="col-sm-4">
                          <label class="control-labe">Medico:</label>
                          <select class="form-control" id="source" name="nombre" >
                              <option><%=modifDoct[0].nombre%></option>
                              <option>---------------</option>
                              <%for (var i=0; i < resp.length; i++) { %>
                                  <option><%=resp[i].nombre%> <%=resp[i].apellidop%> <%=resp[i].apellidom%></option>
                              <% } %>                            
                          </select>
                      </div>
                      
                      <div class="col-sm-4">
                          <label class="control-labe">Especialidad:</label>
                          <select class="form-control" id="source" name="especialidad" >
                              <option><%=modifDoct[0].Consulta_especilaida.nombre%></option>
                              <option>---------------</option>
                              <%for (var i=0; i < esp.length; i++) { %>
                                  <option><%=esp[i].nombre%></option>
                              <% } %>     
                          </select>
                      </div>
                  </div>
                  
                 
                 
                  <div class="form-group">
                    
                      <div class="col-sm-3">
                          <label class="control-labe">Tipo de Doctor:</label>
                          <select  class="form-control" id="source" name="TDoctor" >
                              <option><%=modifDoct[0].TDoctor%></option>
                              <option>---------------</option>
                              <option>Medico Titular</option>
                              <option>Medico Suplente</option>
                          </select>
                      </div>
                      
                      <div class="col-sm-4">
                          <label class="control-labe">Enfermera:</label>
                        <input type="text" class="form-control" name="enfermera" value="<%=modifDoct[0].enfermera%>" parsley-trigger="change"    />
                      </div>
                      
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-10">
                            <a class="btn btn-info active btn-icon" aria-pressed="true" role="button"  href="/cuaderno/limpiarMDoc">Volver<span>&nbsp;</span><i class="fa fa-arrow-left"></i></a><span>&nbsp;&nbsp;&nbsp;</span>
                          <button type="submit" class="btn btn-success btn-icon">Actualizar <span>&nbsp;</span><i class="fa fa-check-square"></i></button><span>&nbsp;&nbsp;&nbsp;</span>
                          <button type="reset"class="btn btn-danger btn-icon">Cancelar <span>&nbsp;</span><i class="fa fa-times"></i></button>
                        </div>
                      </div>/form-group
                    
                  </form>
                <% } %>
                
              </div>
          </div>
        </div>
