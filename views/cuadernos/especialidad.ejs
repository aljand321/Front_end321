<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("../partials/head") -%>
</head>
<body class="dashboard-sideBar-imagg cover">
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage dashboard-sideBar-cttt">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
				<li>
					<a href="#!" class="btn-search">
						<i class="zmdi zmdi-search"></i>
					</a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
            <div class="page-header">
                <h1 class="text-titles"><i class="zmdi zmdi-home zmdi-hc-fw"></i>Salas</h1>
            </div>
        </div>
        <!-- Nueva Sala-->
		<div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-10 col-md-offset-1">
                    <a href="/cuaderno/limpiar">Limpiar</a>
                <%if (espONE == null) { %>
                <form action="/cuaderno/especialidad" method="POST">
                    <div class="form-group label-floating">
                        <label class="control-label">Nombre de Especialidad</label>
                        <input class="form-control" type="text" name="nombre">
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Sigla</label>
                        <input class="form-control" type="text" name="sigla">
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Descripcion</label>
                        <input class="form-control" type="descripcion" name="descripcion">
                    </div>
                    <p class="text-center">
                        <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                        <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                    </p>
                </form>
                <% } else { %>
                    <form action="/cuaderno/updateEsp/<%=espONE[0].id%>" method="POST">
                        <div class="form-group label-floating">
                            <label class="control-label">Nombre de Especialidad</label>
                            <input class="form-control" type="text" name="nombre" value="<%=espONE[0].nombre%>">
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Sigla</label>
                            <input class="form-control" type="text" name="sigla" value="<%=espONE[0].sigla%>">
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Descripcion</label>
                            <input class="form-control" type="descripcion" name="descripcion" value="<%=espONE[0].descripcion%>">
                        </div>
                        <p class="text-center">
                            <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                            <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                        </p>
                    </form>
                <% } %>

                <!-- Lista de Salas-->
                <div class="table-responsive">
					<div class="table-responsive">
                        <div class="table-wrapper">
                            <table class="fl-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Especilidad</th>
                                        <th>Descripcion</th>
                                        <th>Piso</th>
                                        <th>Modificar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i = 0; i < resp.length; i++) { %>
                                    <tr>
                                        <td><%= i+1%></td>
                                        <td><%=resp[i].nombre%></td>
                                        <td><%=resp[i].sigla%></td>
                                        <td><%=resp[i].descripcion%></td>
                                        <td><a href="/cuaderno/oneEsp/<%=resp[i].id%>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi zmdi-refresh-alt"></i></a></td>
                                    </tr>
                                    <% } %>
                                <tbody>
                            </table>
                        </div>
                    </div>
                    <p class="text-center">
                        <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp;Imprimir</button>
                    </p>
                </div>
            </div>
        </div>
    </div>
	</section>
	<!--====== Scripts -->
	<%- include("../partials/scripts") -%>
</body>
</html>