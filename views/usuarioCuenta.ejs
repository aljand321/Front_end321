<!DOCTYPE html>
<html lang="es">
<head>
	<title>Usuario</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body class="dashboard-sideBar-imagg cover">
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage dashboard-sideBar-cttt">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
			<div class="page-header">
				<h1 class="text-titles"><i class="zmdi zmdi zmdi-accounts-add zmdi-hc-fw"></i> Registro de Usuarios </h1>
			</div>
		</div>
		<div class="container-fluid">
			<div class="row">
				<form action="/usuarios/crearCuenta/<%=id.id%>" method="POST">
					<div class="grupo" id="cabeza">
						<div id="correo">
							<div class="entrada">Correo Electrónico:<br>
								<input type="email" name="correo" id="correo">
								<span id="su"></span><br>
							</div>
							<div class="entrada">Contraceña:<br>
								<input type="password" name="contraseña" minlength="8" id="contraseña" ><br>
							</div>
							<div class="entrada">Repita contraceña Contraceña por favor:<br>
								<input type="password" name="contraseña2"id="contraseña2">
								<span id="error2"></span><br>
							</div>
							<div class="entrada">Tipo de Usuario:<br>
								<input type="text" name="tipo_usuario" ><br>
							</div>
						</div>
					</div>
					<p class="text-center">
						<button type="reset" class="btn btn-info btn-raised" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
						<button type="submit" class="btn btn-danger btn-raised"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
					</p>
				</form>
			</div>
			<div class="table-responsive">
				<div class="table-wrapper">
					<div id="correo">
						<div class="entrada">
							<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success btn-raised btn-lg"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
						</div>
						<div class="entrada">Buscar <i class="zmdi zmdi-search"></i><br>
							<input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Buscar..."><br>
						</div>
					</div>
					<table class="fl-table" id="myTable">
						<thead>
							<tr>
							<th>Correo</th>
							<th>Tipo de Usuario</th>
							<th>Dar de Baja</th>
							<th>Modificar Cuenta</th>
							</tr>
						</thead>
						<tbody>
							<% for (var i=0; i< resp.length; i++) { %>
							<tr>
							<td><%=resp[i].correo %></td>
							<td><%=resp[i].tipo_usuario %></td>							
							</tr>
							<% } %>
						<tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
	<script src="/js/validaciones.js"></script>	
</body>
</html>