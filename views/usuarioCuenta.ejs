<!DOCTYPE html>
<html lang="es">
<head>
	<title>Usuario</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
		<!-- NavBar -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
				<li>
					<a href="#!" class="btn-search"><i class="zmdi zmdi-search"></i></a>
				</li>
			</ul>
		</nav>
		<!-- Content page -->
		<div class="container-fluid">
			<div class="page-header">
				<h1 class="text-titles"><i class="zmdi zmdi zmdi-accounts-add zmdi-hc-fw"></i> Registro de Usuarios </h1>
			</div>
		</div>
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
					<ul class="nav nav-tabs" style="margin-bottom: 15px;">
						<li class="active"><a href="#list" data-toggle="tab">Nuevo Registro</a></li>
						<li><a href="#new" data-toggle="tab">Lista de Registros</a></li>
					</ul>
					<!--tabla de registros de Usuarios -->
					<div id="myTabContent" class="tab-content">
						<!-- nuevo registro de Usuarios-->
						<div class="tab-pane fade active in" id="list">
								<div class="container-fluid">
									<div class="row">
										<div class="col-xs-12 col-md-10 col-md-offset-1">
											<form action="/usuarios/crearCuenta/<%=id.id%>" method="POST">				
												<div class="form-group label-floating">
													<label class="control-label">Correo</label>
													<input class="form-control" type="email" name="correo" id="correo">
													<span id="su"></span>
												</div>
												<div class="form-group label-floating">
													<label class="control-label">Contraceña</label>
													<input class="form-control" type="password" name="contraseña" minlength="8" id="contraseña" >
	
												</div>
												<div class="form-group label-floating">
													<label class="control-label">repita contraceña Contraceña por favor</label>
													<input class="form-control" type="password" name="contraseña2"id="contraseña2">
													<span id="error2"></span>
												</div>
												<div class="form-group label-floating">
													<label class="control-label">Tipo de Usuario</label>
													<input class="form-control" type="text" name="tipo_usuario" >
												</div>
												<p class="text-center">
													<button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
													<button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
												</p>
											</form>
										</div>
									</div>
								</div>
							</div>
						<div class="tab-pane fade " id="new">
							<p class="text-center">
								<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
							</p>
							<div class="table-responsive">
								<div class="table-wrapper">
									<div class="form-group pull-left">
										<input type="text" class="search form-control" placeholder="Buscar">
									</div>
									<span class="counter pull-left"></span>
									<table class="fl-table">
										<thead>
											<tr>
											<th>#</th>									
											<th>Correo</th>
											
											<th>Tipo de Usuario</th>
											<th>Dar de Baja</th>
											<th>Modificar Cuenta</th>
											</tr>
										</thead>
										<tbody>
											<% for (var i=0; i< resp.length; i++) { %>
											<tr>
											<td><%= i + 1 %></td>
											
											<td><%=resp[i].correo %></td>
											
											<td><%=resp[i].tipo_usuario %></td>							
											</tr>
											<% } %>
										<tbody>
									</table>
								</div>
							</div>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
	<script src="/js/validaciones.js"></script>	
</body>
</html>