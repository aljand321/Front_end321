<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
	<!-- NavBar -->
	<nav class="full-box dashboard-Navbar">
		<ul class="full-box list-unstyled text-right">
			<li class="pull-left">
				<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
			</li>
			<li>
				<a href="#!" class="btn-search"><i class="zmdi zmdi-search"></i></a>
			</li>
		</ul>
	</nav>
	<!-- Content page -->
	<div class="container-fluid">
		<div class="page-header">
	        <h1 class="text-titles"><i class="zmdi zmdi-widgets zmdi-hc-fw"></i>Distribucion</h1>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ul class="nav nav-tabs" style="margin-bottom: 15px;">
				  	<li class="active"><a href="#new" data-toggle="tab">Lista de Disribuciones</a></li>
				  	<li><a href="#list" data-toggle="tab">Nuevo Distribución</a></li>
                </ul>
				<!-- lista Medicamento -->
				<div id="myTabContent" class="tab-content">
					<div class="tab-pane fade active in" id="new">
						<div class="container-fluid">
			  			<p class="text-center">
							<button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
						</p>
						<div class="table-responsive">
							<div class="form-group pull-left">
								<input type="text" class="search form-control" placeholder="Buscar">
							</div>
							<span class="counter pull-left"></span>
							<div class="table-wrapper">
								<table class="table table-hover table-bordered results fl-table">
									<thead>
										<tr>
											<th>#</th>
											<th>Grupo de Asignación</th>
											<th>Codificación</th>
											<th>Nombre</th>
											<th>Generico</th>
											<th>Concentracion</th>
											<th>Unidad de Medida</th>
											<th>Presentacion</th>
											<th>Fecha de Llegada</th>
											<th>Fecha de Vencimiento</th>
											<th>Cantidad</th>
											<th>Cantidad Unid.</th>
											<th>Precio</th>
											<th>Opciones</th>
										</tr>
										<tr class="warning no-result">
											<td colspan="14"><i class="fa fa-warning"></i> No result</td>
										</tr>
									</thead>
									<tbody>
										<tr>
											
										</tr>
									<tbody>
								</table>
							</div>
						</div>
						</div>  
					</div>
					<!-- Nueva Distribucion-->
					<div class="tab-pane fade" id="list">
						<form action="/medicamento/medicamentos" method="POST">
							<div class="col-md-12 panel-body">
								<div class="col-md-12">
									<div class="col-md-3">
										<div class="form-group label-floating">
											<label class="control-label">Codigo</label>
											<input class="form-control" type="text" name="codigo">
										</div>
									</div>
									<div class="col-md-9">
										<div class="form-group label-floating">
											<label class="control-label">Responsable</label>
											<input class="form-control" type="text" name="responsable">
										</div>	
									</div>
								</div>
							</div>
							<div class="col-md-12 panel-body">
								<div class="col-md-12">
									<div class="col-md-6">
										<div class="form-group label-floating">
											<label class="control-label">Recibe</label>
											<input class="form-control" type="text" name="cantidad">
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label class="control-label">Fecha de Llegada</label>
											<input class="form-control" type="date" name="fechaLLEgada">
										</div>
									</div>
								</div>
							</div>
							<div class="col-xs-12 col-md-10 col-md-offset-1">
								<div class="table-wrapper">
									<table class="fl-table">
										<thead>
											<tr>
											<th>Codigo</th>
											<th>Descripcion</th>
											<th>Cantidad</th>
											<th>Unidad</th>
											<th>Eliminar</th>
											</tr>
										</thead>
										<tbody>
											<tr>
											<td>123</td>
											<td>Paracetamol</td>
											<td><input type="number" name="number_control" min="1" max="1000" value="1"/></td>
											<td>8</td>
											<td class="text-center"><a href="#!" class="btn btn-danger btn-raised btn-xs"><i class="zmdi zmdi-delete"></i></a></td>
											</tr>
										<tbody>
									</table>
								</div>
							</div>
							<p class="text-center">
                                <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                            </p>
					    </form>
					</div>
				</div>  
			</div>
		</div>
	</div>
	</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
</body>
</html>