<!DOCTYPE html>
<html lang="es">
<head>
	<title>Papeleta Internacion</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <%- include("../partials/head") -%>
</head>
<body class="dashboard-sideBar-imagg cover">
	<!-- SideBar -->
    <%- include("partials/menu") -%>
    <!-- SideBar Menu Hospital-->
    <ul class="list-unstyled full-box dashboard-sideBar-Menu">
        <li>
            <a href="/emergencia/homeEmergencia/doctor">
                <i class="zmdi zmdi-view-dashboard zmdi-hc-fw"></i> Home Docotor
            </a>
        </li>
        <!-- Emergencias -->
        <li>
            <a href="#!" class="btn-sideBar-SubMenu"><i class="zmdi zmdi-hospital-alt zmdi-hc-fw"></i> Emergencias <i class="zmdi zmdi-caret-down pull-right"></i></a>
            <ul class="list-unstyled full-box">
                <li><a href="/emergencia/dataEmergencia/doctor"><i class="zmdi zmdi-accounts-list zmdi-hc-fw"></i>Liatas de citas</a></li>
            </ul>
        </li>
        <li>
			<a href="/emergencia/RenderConsultaEmergencia"><i class="zmdi zmdi-view-dashboard zmdi-hc-fw"></i> Volver a la consulta
		</li>
    </ul>
    <%- include("partials/menuFooter") -%>
	<!-- Content page-->
<section class="full-box dashboard-contentPage dashboard-sideBar-cttt">
	<!-- NavBar -->
	<nav class="full-box dashboard-Navbar">
		<ul class="full-box list-unstyled text-right">
			<li class="pull-left">
				<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
			</li>
		</ul>
	</nav>
	<!-- Content page -->
	<div class="container-fluid">
		<div class="page-header">
			<h1 class="text-titles"><i class="zmdi zmdi-account-calendar zmdi-hc-fw"></i> Papeleta de Internacion</h1>			  
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ul class="nav nav-tabs" style="margin-bottom: 15px;">
					<li class="active"><a href="#PapeletaInternacion" data-toggle="tab">Papeleta de Internacion</a></li>
                    <li><a href="#list" data-toggle="tab">Lista de Emergencias del Paciente</a></li>
				</ul>
				<div id="myTabContent"  class="tab-content" >
					<div class="tab-pane fade active in" id="PapeletaInternacion">
						<!-- datos personales-->
                        <%if(updateInternacion == "") { %>
                        <form action="/emergencia/Pinternacion/<%=resp[0].id%>/" method="POST">
                            <div class="grupo" id="cabeza">
                                    <p class="lead">Datos Personales </p>
                                    <div class="correo">
                                        <div class="entrada">Tipo de Consulta<br>
                                            <select name="tipoConsulta">
                                                <option value="emeregencia">Emergencia</option>                                            
                                            </select><br>
                                        </div>
                                        <div class="entrada">Area de Internacion<br>
                                            <select name="especialidad">
                                                <% for(var i=0; i< especialidad.length; i++) {%>
                                                <option><%=especialidad[i].nombre%></option>
                                                <% } %>
                                            </select><br>
                                        </div>
                                        <div class="entrada">Fecha de Ingreso<br>
                                            <input type="date" name="fechaIngreso"><br>
                                        </div>	
                                    </div>
                                    <div id="tres2">
                                            <div class="entrada">NÂ° de Historia<br>
                                                <input  type="text" value="<%=resp[0].Nhistorial%>" name="Historial"><br>
                                            </div>
                                            <div class="entrada">Nombre <br>
                                                <input type="text" value="<%=resp[0].Citas_Medica.Paciente.nombre%>"><br>
                                            </div>
                                            <div class="entrada">Apellido Paterno<br>
                                                <input type="text" value="<%=resp[0].Citas_Medica.Paciente.apellidop%>" ><br>
                                            </div>
                                        
                                            <div class="entrada">Apellido Materno<br>
                                                <input type="text" value="<%=resp[0].Citas_Medica.Paciente.apellidom%>" ><br>
                                            </div>
                                            <div class="entrada">Sexo<br>
                                                <select  >
                                                    <option><%=resp[0].Citas_Medica.Paciente.sexo%></option>
                                                </select><br>
                                            </div>
                                            <div class="entrada">Fecha de Nacimiento<br>
                                                <input type="text" value="<%=resp[0].Citas_Medica.Paciente.fechanacimiento%>" ><br>
                                            </div>
                                    </div>  
                                </div>
                                <div class="grupo" id="cabeza">
                                    <h4>Datos del Doctor</h4>
                                    <div class="entrada">Nombre Del Doctor<br>
                                        <input type="text" value="<%=resp[0].nombreDoctor%>" name="nombreDoctor"><br>
                                    </div>
                                </div>
                                <div class="grupo" id="cabeza">
                                    <h3>Estado del paciente</h3>						
                                        <div class="entrada">Diagnostico<br>
                                           <textarea  name="diagnostico"></textarea><br>
                                        </div>
                                </div>
                                <p class="text-center">
                                        <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                        <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                                        <button type="submit" class="btn btn-outline-danger"><i class="zmdi zmdi-download"></i> &nbsp;&nbsp; Imprimir</button>
                                    </p>       
                             </form>
                            <% } else {%>
                            <h2>Formulario de actualizacion</h2>
                            <form action="/emergencia/updatePinter/<%=updateInternacion[0].id%>" method="POST">

                                <div class="grupo" id="cabeza">
                                        <div class="entrada">Area de hospitalizacion:<br>
                                            <select name="especialidad" >
                                                <option><%=updateInternacion[0].especialidad%></option>
                                                <option>----------------------------</option>
                                                <% for(var i=0; i< especialidad.length; i++) {%>
                                                    <option><%=especialidad[i].nombre%></option>
                                                <% } %>
                                            </select><br>
                                        </div>
                                    <p class="lead">Datos Personales </p> 
                                    <div id="cuatro">
                                        <div class="entrada">Historial Clinico:<br>
                                            <input type="text" value="<%=resp[0].Nhistorial%>" name="Historial"><br>
                                        </div>
                                        <div class="entrada">Apellido Paterno<br>
                                            <input type="text" value="<%=resp[0].Citas_Medica.Paciente.apellidop%>" ><br>
                                        </div>
                                        <div class="entrada">Apellido Materno:<br>
                                            <input type="text" value="<%=resp[0].Citas_Medica.Paciente.apellidom%>" ><br>
                                        </div>
                                        <div class="entrada">Nombre(s):<br>
                                            <input type="text" value="<%=resp[0].Citas_Medica.Paciente.nombre%>" ><br>
                                        </div>
                                    </div>
                                    <div id="tres2">
                                        <div class="entrada">Fecha de Nacimiento:<br>
                                            <input type="text" value="<%=resp[0].Citas_Medica.Paciente.fechanacimiento%>" ><br>
                                        </div>
                                        <div class="entrada">Sexo:<br>
                                            <select name="sexo" >
                                                <option><%=resp[0].Citas_Medica.Paciente.sexo%></option>
                                            </select><br>
                                        </div>
                                        <div class="entrada">Tipo de Consulta:<br>
                                            <select name="tipoConsulta">
                                                <option value="emeregencia">Emergencia</option>                                            
                                            </select><br>
                                        </div>
                                    </div>
                                    <div id="correo">
                                        <div class="entrada">Fecha de Ingreso:<br>
                                            <input type="date" name="fechaIngreso" value="<%=updateInternacion[0].fechaIngreso%>"><br>
                                        </div>
                                    </div>
                                </div>
                                <div class="grupo" id="cabeza">
                                    <p class="lead">Datos del Doctor</p>
                                    <div id="tres2">
                                        <div class="entrada">Apellido Paterno del Doctor<br>
                                            <input type="text" value="<%=resp[0].apellidoD1%>" name="apellidoD1"><br>
                                        </div>
                                        <div class="entrada">Apellido Materno del Doctor:<br>
                                            <input type="text" value="<%=resp[0].apellidoD2%>" name="apellidoD2"><br>
                                        </div>
                                        <div class="entrada">Nombre(s) del Doctor:<br>
                                            <input type="text" value="<%=resp[0].nombreDoctor%>" name="nombreDoctor"><br>
                                        </div>
                                    </div>
                                </div>
                                <div id="ultimo">
                                    <p class="lead">Estado del Paciente</p>                                    
                                    <div class="entrada">Diagnostito del Paciente:<br>
                                        <textarea  class="large-compact"  name="diagnostico" cols="100" rows="10"><%=updateInternacion[0].diagnostico%></textarea><br>
                                    </div>
                                </div>
                                <p class="text-center">
                                    <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                    <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                                    <button type="submit" class="btn btn-outline-danger"><i class="zmdi zmdi-download"></i> &nbsp;&nbsp; Imprimir</button>
                                </p>
                            </form>
                            <% } %>    
                    </div>
                    <!-- lista de internaciones -->
                    <div class="tab-pane fade" id="list">                       
                            <div id="correo">
                                    <div class="entrada">
                                        <button type="button" value="Imprimir" onclick="window.print()" class="btn btn-success btn-raised btn-lg"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir</button>
                                    </div>
                                    <div class="entrada">Buscar <i class="zmdi zmdi-search"></i><br>
                                        <input type="text" id="searchInput" placeholder="Buscar.."><br>
                                    </div>
                                </div>
                            <div class="table-responsive" >
                            <table class="fl-table" id="myTable" >
                            <thead>
                                <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Apellido Paterno</th>
                                <th>Apellido Materno</th>
                                <th>Nombre del doctor</th>  
                                <th>Diagnostico</th>
                                <th>Fecha </th>
                                <th>Modificar</th>                                           
                            </tr>                               
                            </thead>
                            <tbody>
                            <% for(var i=0; i< listPinter.length; i++) { %>
                                <tr>
                                <td><%= i + 1 %></td>
                                <td><%=listPinter[i].emergencium.Citas_Medica.Paciente.nombre %></td>                                        
                                <td><%=listPinter[i].emergencium.Citas_Medica.Paciente.apellidop %></td>
                                <td><%=listPinter[i].emergencium.Citas_Medica.Paciente.apellidom %></td>
                                <td><%=listPinter[i].nombreDoctor %> <%=listPinter[i].apellidoD1 %> <%=listPinter[i].apellidoD2 %></td>
                                <td><%=listPinter[i].diagnostico %></td>
                                <td><%=listPinter[i].createdAt %></td>
                                <td class="text-center" ><a href="/emergencia/ListPInter/<%=listPinter[i].idEmergencia %>/<%=listPinter[i].Historial %>" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>					
			</div>	
		</div>	        
	</div>
</section>
	<!--====== Scripts -->
    <%- include("../partials/scripts") -%>
</body>
</html>